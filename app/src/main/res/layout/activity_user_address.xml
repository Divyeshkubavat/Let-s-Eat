<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.User_Address">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/app">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_280sdp"
                app:lottie_repeatMode="restart"
                app:lottie_repeatCount="50"
                app:lottie_autoPlay="true"
                android:layout_marginTop="@dimen/_minus60sdp"
                android:layout_centerHorizontal="true"
                app:lottie_rawRes="@raw/registration"
                android:id="@+id/User_Address_Animation"
                tools:ignore="MissingClass"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_below="@id/User_Address_Animation"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_24sdp"
                app:cardCornerRadius="@dimen/_24sdp"
                app:cardElevation="@dimen/_16sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/_19sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:id="@+id/addtext"
                        android:textSize="@dimen/_29sdp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#281818"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:hintAnimationEnabled="false"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#ffffff"
                        app:boxStrokeWidthFocused="0dp"
                        android:hint=" ">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext"
                            android:padding="@dimen/_12sdp"
                            android:hint="Address"
                            android:id="@+id/User_Address_Address"
                            android:drawableLeft="@drawable/baseline_add_location_24"
                            android:drawablePadding="@dimen/_8sdp"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:hintAnimationEnabled="true"
                        android:hint=" "
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#ffffff"
                        app:boxStrokeWidthFocused="0dp"
                        app:passwordToggleTint="#281818"
                        app:startIconTint="#281818"
                        app:startIconDrawable="@drawable/baseline_date_range_24">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext"
                            android:id="@+id/User_Address_DOB"
                            android:padding="@dimen/_12sdp"
                            android:singleLine="true"
                            android:hint="Date of Birth"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/User_Address_Button"
                        android:text="Verify"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:backgroundTint="#281818"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>