<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.User_Add_Product_Cart">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_50sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_50sdp">
            <ImageView
                android:id="@+id/User_Add_Product_Cart_Image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/b"
                android:background="@drawable/image_border" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">
                <View
                    android:layout_width="@dimen/_122sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DETAILS"
                    android:textColor="@color/app"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"/>
                <View
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:text="Name : "
                    android:textColor="@color/app"/>
                <TextView
                    android:id="@+id/User_Add_Product_Cart_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/app"
                    android:textSize="@dimen/_14sdp"
                    android:text="@string/app_name"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:text="Price : "
                    android:textColor="@color/app"/>
                <TextView
                    android:id="@+id/User_Add_Product_Cart_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/app"
                    android:textSize="@dimen/_14sdp"
                    android:text="100 RS"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:text="Brand : "
                    android:textColor="@color/app"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/app"
                    android:textSize="@dimen/_14sdp"
                    android:text="Let's Eat"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:text="Description : "
                    android:textColor="@color/app"/>
                <TextView
                    android:id="@+id/User_Add_Product_Cart_Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/app"
                    android:textSize="@dimen/_14sdp"
                    android:text="Uses conventional cryptography which makes it much faster that system based on public-key cryptography (e-cash)."
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="@dimen/_10sdp">
                <View
                    android:layout_width="@dimen/_122sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUANTITY"
                    android:textColor="@color/app"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"/>
                <View
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/User_Add_Product_Cart_Minus_Button"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/user_home_button_2"
                    android:src="@drawable/baseline_horizontal_rule_24"
                    android:backgroundTint="@color/app"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"/>
                <TextView
                    android:id="@+id/User_Add_Product_Cart_Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:text="100"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:textColor="@color/app"/>
                <ImageView
                    android:id="@+id/User_Add_Product_Cart_Plus_Button"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/user_home_button_3"
                    android:src="@drawable/baseline_add_24"
                    android:backgroundTint="@color/app"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="@dimen/_10sdp">
                <View
                    android:layout_width="@dimen/_122sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RATING"
                    android:textColor="@color/app"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"/>
                <View
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"/>
            </LinearLayout>
            <RatingBar
                android:layout_width="wrap_content"
                 android:stepSize="0.5"
                android:layout_height="match_parent"
                android:max="5"
                android:progressBackgroundTint="#95F9A825"
                android:progressTint="@color/app"
                android:id="@+id/User_Add_Product_Cart_Ratingbar"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:focusable="false"
                android:isIndicator="true"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2">
        <Button
            android:id="@+id/User_Add_Product_Cart_Add_To_Cart_Button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:text="Add To Cart"
            android:textColor="@color/app"
            android:textStyle="bold"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_shopping_cart_24"
            android:drawableTint="@color/app"
            android:backgroundTint="@color/button"
            android:padding="@dimen/_8sdp"/>
        <Button
            android:id="@+id/User_Add_Product_Cart_Image_Buy_now_Button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:text="Buy Now"
            android:textColor="@color/button"
            android:layout_weight="1"
            android:textStyle="bold"
            android:drawableRight="@drawable/baseline_shopping_cart_24"
            android:drawableTint="@color/button"
            android:backgroundTint="@color/app"
            android:padding="@dimen/_8sdp"/>
    </LinearLayout>
</RelativeLayout>