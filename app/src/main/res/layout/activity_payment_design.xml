<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/payment_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:elevation="18dp"
            android:src="@drawable/a"
            app:civ_border_color="@color/app"
            app:civ_border_overlay="false"
            app:civ_border_width="2dp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cheese Burger"
            android:textSize="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="120dp"
            android:textStyle="bold"
            android:textColor="@color/app"
            android:id="@+id/payment_product_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="100 RS"
            android:textSize="18dp"
            android:layout_below="@id/payment_product_name"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/app"
            android:id="@+id/payment_product_price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:textSize="18dp"
            android:layout_below="@id/payment_product_price"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/app"
            android:text="QTY : 2"
            android:id="@+id/payment_qty"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>