<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textColor="@color/app"
            android:id="@+id/o_product_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="18dp"
            android:layout_below="@id/o_product_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/app"
            android:id="@+id/o_mobile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_below="@id/o_mobile"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/app"
            android:text="Date"
            android:id="@+id/o_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Status : Pending "
            android:layout_below="@id/o_date"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:id="@+id/o_payment_status"
            android:textColor="@color/app"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:text="Total"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:textColor="@color/app"
                android:textStyle="bold"
                android:id="@+id/o_total"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="status"
                android:textSize="20dp"
                android:id="@+id/o_status"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="#E11111"/>



        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>