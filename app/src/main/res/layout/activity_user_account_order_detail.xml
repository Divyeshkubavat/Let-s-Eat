<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.User_Account_Order_Detail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_50sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_arrow_back_ios_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="#BAFBF9F9"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track Order"
                    android:textAlignment="viewEnd"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textColor="@color/app"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order ID :- "
                    android:textStyle="bold"
                    android:textColor="@color/app"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/User_Account_Order_Detail_Order_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 12345678"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:textSize="@dimen/_15sdp"
                    android:layout_toRightOf="@id/temp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="#C62828"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/User_Account_Order_Detail_Timer"/>
            </RelativeLayout>
            <ScrollView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_border"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/User_Account_Order_Detail_Recyclerview"
                    android:layout_margin="@dimen/_5sdp"
                    tools:listitem="@layout/activity_user_product_payment_design"/>
            </ScrollView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:layout_marginTop="@dimen/_30sdp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Order_Track_Place_Order_Imageview"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:civ_border_width="@dimen/_2sdp"
                            app:civ_border_color="@color/green"
                            android:src="@drawable/baseline_done_2_24" />
                        <View
                            android:id="@+id/Order_Track_Place_Order_Line"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/green"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_minus6sdp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/Order_Track_Place_Order_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Placed"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_minus6sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Order_Track_Accept_Order_Imageview"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:civ_border_width="@dimen/_2sdp"
                            app:civ_border_color="@color/app"
                            android:src="@drawable/baseline_brightness_1_24"/>
                        <View
                            android:id="@+id/Order_Track_Accept_Order_Line"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/app"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_minus6sdp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/Order_Track_Accept_Order_Textiew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Accepted"
                        android:textColor="@color/app"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_minus6sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Order_Track_Process_Order_Imageview"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:civ_border_width="@dimen/_2sdp"
                            app:civ_border_color="@color/button"
                            android:src="@drawable/baseline_brightness_3_24"/>
                        <View
                            android:id="@+id/Order_Track_Process_Order_Line"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/button"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_minus6sdp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/Order_Track_Process_Order_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Processing"
                        android:textColor="@color/button"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_minus6sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Order_Track_Out_For_Deliver_Imageview"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:civ_border_width="@dimen/_2sdp"
                            app:civ_border_color="@color/button"
                            android:src="@drawable/baseline_brightness_3_24"/>
                        <View
                            android:id="@+id/Order_Track_Out_For_Deliver_Line"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/button"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_minus5sdp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/Order_Track_Out_For_Deliver_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out For Delivery"
                        android:textColor="@color/button"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_minus6sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Order_Track_Delivered_Imageview"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:civ_border_width="@dimen/_2sdp"
                            app:civ_border_color="@color/button"
                            android:src="@drawable/baseline_brightness_3_24"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/Order_Track_Delivered_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivered"
                        android:textColor="@color/button"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_3sdp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/app"
                            android:text="Total Bill :- "
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/User_Account_Order_Detail_Toatl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="#C62828"
                            android:text="$ 200 "
                            android:layout_alignParentEnd="true"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/User_Account_Order_Cancel_Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#C62828"
                        android:text="Cancel"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/_20sdp"
                        android:layout_margin="@dimen/_8sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/l3"
                        android:weightSum="3">
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                android:padding="@dimen/_3sdp"
                                android:layout_margin="@dimen/_3sdp"
                                android:gravity="center_horizontal">
                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:background="@color/black"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_5sdp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Rating"
                                    android:layout_marginRight="@dimen/_3sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:textColor="@color/app"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/black"/>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                    <RatingBar
                        android:id="@+id/User_Account_Order_Detail_RatingBar"
                        android:layout_width="wrap_content"
                        android:stepSize="0.5"
                        android:layout_height="match_parent"
                        android:max="5"
                        android:progressBackgroundTint="#95F9A825"
                        android:progressTint="@color/app"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_gravity="center_horizontal" />
                    <Button
                        android:id="@+id/User_Account_Order_Detail_RatingBar_Submit_Button"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Submit"
                        android:textColor="@color/button"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/user_home_button_4"
                        android:drawableTint="@color/button"
                        android:backgroundTint="@color/app"
                        android:padding="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>