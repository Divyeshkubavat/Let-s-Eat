<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.User_Account_Payment_History">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app"
                android:text="--: Payment :--"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_25sdp"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_20sdp"/>
            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:hint="Search here"
                android:id="@+id/User_Account_Payment_History_Searchview"
                app:iconifiedByDefault="false"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="@drawable/search_design"
                android:textAppearance="@color/white"
                app:queryHint="Search here ...."/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/_12sdp"
                    android:id="@+id/User_Account_Payment_History_Recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/activity_user_account_payment_history_design"/>
            </ScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        app:lottie_repeatMode="restart"
        app:lottie_repeatCount="50"
        android:layout_height="@dimen/_220sdp"
        app:lottie_autoPlay="true"
        android:layout_centerVertical="true"
        app:lottie_rawRes="@raw/empty"
        android:id="@+id/payment_lottie"
        android:visibility="gone"
        tools:ignore="MissingClass"/>
</RelativeLayout>